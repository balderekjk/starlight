---
import type { Props } from "@astrojs/starlight/props";
---

<div class="h-[380px] m-[-1px] overflow-hidden">
  <img
    height="381px"
    class="h-[381px] bg-top [background-image:url(src/assets/nhea-cover.jpg)] w-full"
  />
</div>
<h1 id="_top" class="py-6 max-w-[70rem] mx-auto px-[var(--sl-content-pad-x)]">
  {Astro.props.entry.data.title}
</h1>

<style>
  h1 {
    margin-top: 1rem;
    font-size: var(--sl-text-h1);
    line-height: var(--sl-line-height-headings);
    font-weight: 600;
    color: var(--sl-color-white);
  }
</style>
